<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/audio_player"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <SeekBar
        android:id="@+id/seekbar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/current_length"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_marginLeft="@dimen/layout_padding"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            tools:text="00.05" />

        <TextView
            android:id="@+id/song_length"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            tools:text="02.00" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/audio_stop_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stop_black_48dp"
            android:layout_marginLeft="@dimen/layout_padding"

            />

        <ImageView
            android:id="@+id/audio_play_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/audio_stop_1"
            android:src="@drawable/ic_play_circle_filled_black_48dp"

            />

        <ImageView
            android:id="@+id/close_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black_48dp"


            />
    </RelativeLayout>
</LinearLayout>




