<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.menschenb1">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon128_plb"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Lesson1Activity"
            android:label="@string/lesson1_title"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.menschenb1.MainActivity" />
        </activity>
        <activity
            android:name=".Lesson2Activity"
            android:label="@string/lesson2_title"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Lesson1Words"
            android:label="@string/title_activity_words"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Lesson2Words"
            android:label="@string/title_activity_words"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AudioPlayer"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Lesson1Grammar"
            android:label="@string/lesson1_title"
            android:parentActivityName=".Lesson1Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lesson1Activity" />
        </activity>
        <activity
            android:name=".Lesson2Grammar"
            android:label="@string/lesson2_title"
            android:parentActivityName=".Lesson1Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lesson2Activity" />
        </activity>
        <activity
            android:name=".Lesson1Audio"
            android:label="@string/lesson1_title"
            android:parentActivityName=".Lesson1Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lesson1Activity" />
        </activity>
        <activity
            android:name=".Lesson2Audio"
            android:label="@string/lesson2_title"
            android:parentActivityName=".Lesson1Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Lesson2Activity" />
        </activity>
        <activity
            android:name=".AudioPlayer2"
            android:label="@string/title_activity_audio_player2"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert">

        </activity>


        <activity
            android:name=".BookView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>
    </application>

</manifest>